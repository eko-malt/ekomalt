.navbar-fixed
  nav.top-nav
    .nav-wrapper.row
      .col.s2.hide-on-large-only
        = content_tag('a', class: 'button-collapse', data: { activates: 'slide-out' } )
          i.material-icons menu
      .logo.hide-on-med-and-down
        = link_to t('application.title'), root_path, class:'brand-logo'
      .col.l3.offset-l3
        h4 = t("leftnav.#{controller.controller_name == 'pages' ? controller.action_name : controller.controller_name.singularize}")
      .col.l2.offset-l2.s1.offset-s3
        span.nav-date
          = text_field_tag 'top_date', Date.today.strftime('%d.%m.%Y'), class: 'top_date', data: { 'current': Date.today.strftime('%d.%m.%Y') }
      ul.right
        li = content_tag('a', current_user.name)
        li = link_to t('application.logout'), logout_path, method: :delete